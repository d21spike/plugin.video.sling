                    <constraints>
                        <minimum>1</minimum>
                        <maximum>30</maximum>
                        <step>1</step>
                    </constraints>
                    <control type="slider" format="integer" />
                    <default>7</default>
                    <dependencies>
                        <dependency type="enable" setting="Use_Slinger" operator="is">true</dependency>
                    </dependencies>
                    <level>0</level>
                </setting>

                <!-- <setting id="VOD_Interval" type="slider" label="30125" default="1" range="1,1,30" option="int" enable="eq(-18,true)" /> -->
                <setting id="VOD_Interval" type="integer" label="30125">
                    <constraints>
                        <minimum>1</minimum>
                        <maximum>30</maximum>
                        <step>1</step>
                    </constraints>
                    <control type="slider" format="integer" />
                    <default>7</default>
                    <dependencies>
                        <dependency type="enable" setting="Use_Slinger" operator="is">true</dependency>
                    </dependencies>
                    <level>0</level>
                </setting>

            <!-- <setting label="30136" type="lsep" /> -->
