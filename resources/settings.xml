    <section id="plugin.video.sling">
        <!-- <category label="30009"> -->
        <category id="General" label="30009">
            <group id="1" label="30009">
                <!-- <setting id="Enable_Debugging" type="bool"   label="30000" default="false" /> -->
                <setting id="Enable_Debugging" type="boolean" label="30000">
                    <control type="toggle" />
                    <default>false</default>
                    <level>0</level>
                </setting>

                <!-- <setting id="User_Email" type="text"   label="30002" default="" /> -->
                <setting id="User_Email" type="string" label="30002">
                    <constraints>
                        <allowempty>true</allowempty>
                    </constraints>
                    <control type="edit" format="string" />
                    <default></default>
                    <level>0</level>
                </setting>

                <!-- <setting id="User_Password" type="text"   label="30003" default=""  option="hidden"/> -->
                <setting id="User_Password" type="string" label="30003" option="hidden">
                    <constraints>
                        <allowempty>true</allowempty>
                    </constraints>
                    <control type="edit" format="string" />
                    <default></default>
                    <level>0</level>
                </setting>

                <!-- <setting id="Log_Out" type="action" label="30008" action="RunPlugin(plugin://plugin.video.sling/?mode=logout)" /> -->
                <setting id="Log_Out" type="action" label="30008" action="RunPlugin(plugin://plugin.video.sling/?mode=logout)">
                    <control type="button" format="action" />
