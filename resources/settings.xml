                    <dependencies>
                        <dependency type="enable" setting="Use_Slinger" operator="is">true</dependency>
                    </dependencies>
                    <level>0</level>
                </setting>

                <!-- <setting id="Shows_Update" type="action" label="30140" action="RunPlugin(plugin://plugin.video.sling/?mode=setting&name=update_shows&value=true)" option="close" enable="eq(-7,true)" /> -->
