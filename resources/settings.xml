            <!-- <setting label="30127" type="lsep" /> -->
            <group id="3" label="30127">
                <!-- <setting id="Enable_EPG" type="bool" label="30128" default="false" enable="eq(-10,true)" /> -->
                <setting id="Enable_EPG" type="boolean" label="30128">
                    <control type="toggle" />
                    <default>false</default>
                    <dependencies>
                        <dependency type="enable" setting="Use_Slinger" operator="is">true</dependency>
                    </dependencies>
                    <level>0</level>
                </setting>

                <!-- <setting id="Guide_Days" type="slider" label="30126" default="2" range="1,1,5" option="int" enable="eq(-1,true) + eq(-11,true)" /> -->
                <setting id="Guide_Days" type="integer" label="30126">
                    <constraints>
                        <minimum>1</minimum>
                        <maximum>5</maximum>
                        <step>1</step>
                    </constraints>
                    <control type="slider" format="integer" />
                    <default>2</default>
                    <dependencies>
                        <dependency type="enable">
                            <and>
                                <condition setting="Use_Slinger" operator="is">true</condition>
                                <condition setting="Enable_EPG" operator="is">true</condition>
                            </and>
                        </dependency>
                    </dependencies>
                    <level>0</level>
                </setting>

                <!-- <setting id="Start_Guide" type="bool" label="30147" default="false" enable="eq(-11,true)" /> -->
                <setting id="Start_Guide" type="boolean" label="30147">
                    <control type="toggle" />
                    <default>false</default>
                    <dependencies>
                        <dependency type="enable" setting="Use_Slinger" operator="is">true</dependency>
                    </dependencies>
                    <level>0</level>
                </setting>
            </group>

            <!-- <setting label="30120" type="lsep" /> -->
            <group id="4" label="30120">
                <!-- <setting id="Channels_Interval" type="slider" label="30121" default="1" range="1,1,7" option="int" enable="eq(-14,true)" /> -->
                <setting id="Channels_Interval" type="integer" label="30121">
                    <constraints>
                        <minimum>1</minimum>
                        <maximum>7</maximum>
                        <step>1</step>
                    </constraints>
                    <control type="slider" format="integer" />
                    <default>1</default>
                    <dependencies>
                        <dependency type="enable" setting="Use_Slinger" operator="is">true</dependency>
                    </dependencies>
                    <level>0</level>
                </setting>

                <!-- <setting id="Guide_Interval" type="slider" label="30122" default="0.5" range="0,0.5,7" option="float" enable="eq(-15,true)" /> -->
                <setting id="Guide_Interval" type="number" label="30122">
                    <constraints>
                        <minimum>0.5</minimum>
                        <maximum>7.0</maximum>
                        <step>0.0</step>
                    </constraints>
                    <control type="slider" format="number" />
                    <default>0.5</default>
                    <dependencies>
                        <dependency type="enable" setting="Use_Slinger" operator="is">true</dependency>
                    </dependencies>
                    <level>0</level>
                </setting>

                <!-- <setting id="Shows_Interval" type="slider" label="30123" default="7" range="1,1,30" option="int" enable="eq(-16,true)" /> -->
                <setting id="Shows_Interval" type="integer" label="30123">
                    <constraints>
                        <minimum>1</minimum>
                        <maximum>30</maximum>
                        <step>1</step>
                    </constraints>
                    <control type="slider" format="integer" />
                    <default>7</default>
                    <dependencies>
                        <dependency type="enable" setting="Use_Slinger" operator="is">true</dependency>
                    </dependencies>
                    <level>0</level>
                </setting>

                <!-- <setting id="On_Demand_Interval" type="slider" label="30124" default="7" range="1,1,30" option="int" enable="eq(-17,true)" /> -->
