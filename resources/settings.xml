                </setting>
            </group>
        </category>

        <!-- <category label="30119"> -->
        <category id="SlingerService" label="30119">
            <group id="1" label="30119">
                <!-- <setting id="Use_Slinger"  type="bool"   label="30119" default="false" /> -->
                <setting id="Use_Slinger" type="boolean" label="30119">
                    <control type="toggle" />
                    <default>false</default>
                    <level>0</level>
                </setting>

                <!-- <setting id="Fix_Live"  type="bool"   label="30148" default="false" enable="eq(-1,true)"/> -->
                <setting id="Fix_Live" type="boolean" label="30148">
                    <control type="toggle" />
                    <default>false</default>
                    <dependencies>
                        <dependency type="enable" setting="Use_Slinger" operator="is">true</dependency>
                    </dependencies>
                    <level>0</level>
                </setting>

                <!-- <setting id="Run_Updates"  type="bool"   label="30149" default="true" enable="eq(-2,true)"/> -->
                <setting id="Run_Updates" type="boolean" label="30149">
                    <control type="toggle" />
                    <default>true</default>
                    <dependencies>
                        <dependency type="enable" setting="Use_Slinger" operator="is">true</dependency>
                    </dependencies>
                    <level>0</level>
                </setting>
            </group>

            <!-- <setting label="30118" type="lsep" /> -->
            <group id="2" label="30118">
                <!-- <setting id="Channels_Update" type="action" label="30137" action="RunPlugin(plugin://plugin.video.sling/?mode=setting&name=update_channels&value=true)" option="close" enable="eq(-4,true)" /> -->
